<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/black"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:padding="7dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true">

            <fonts.DBHelvethaicaX.MedCondTextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="U DRINK "
                android:textColor="@color/white"
                android:textSize="@dimen/font_xlarge" />

            <fonts.DBHelvethaicaX.MedCondTextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="I DRIVE"
                android:textColor="@color/blue"
                android:textSize="@dimen/font_xlarge" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:padding="7dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/edit" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/noDriverView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/userImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:scaleType="centerCrop"
            android:src="@drawable/usericon"
            app:civ_border_color="#FF000000"
            app:civ_border_width="1dp" />

        <LinearLayout
            android:id="@+id/llFirstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="17dp"
            android:layout_below="@id/userImage"
            android:background="@color/greyAlpha"
            android:orientation="horizontal">

            <fonts.DBHelvethaicaX.MedTextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:text="@string/ep_firstname"
                android:textColor="@color/blue_curious"
                android:textSize="@dimen/font_medium" />

            <fonts.DBHelvethaicaX.MedEditText
                android:id="@+id/edtFirstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:imeOptions="actionNext"
                android:lines="1"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/font_medium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:layout_below="@id/llFirstname"
            android:background="@color/greyAlpha"
            android:orientation="horizontal">

            <fonts.DBHelvethaicaX.MedTextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:text="@string/ep_lastname"
                android:textColor="@color/blue_curious"
                android:textSize="@dimen/font_medium" />

            <fonts.DBHelvethaicaX.MedEditText
                android:id="@+id/edtLastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:singleLine="true"
                android:lines="1"
                android:imeOptions="actionNext"
                android:textColor="@color/white"
                android:textSize="@dimen/font_medium" />
        </LinearLayout>

        <fonts.DBHelvethaicaX.MedTextView
            android:id="@+id/headerAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/llLastname"
            android:text="@string/ep_account"
            android:gravity="center"
            android:textColor="@color/blue_curious"
            android:textSize="@dimen/font_medium" />

        <RelativeLayout
            android:id="@+id/rlGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/headerAccount"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/greyAlpha"
            android:orientation="horizontal">

            <fonts.DBHelvethaicaX.MedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text="@string/ep_gender"
                android:textColor="@color/blue_curious"
                android:textSize="@dimen/font_medium" />

            <fonts.DBHelvethaicaX.MedTextView
                android:id="@+id/tvGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/font_medium" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/tvGender"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/dropdown" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:layout_below="@id/rlGender"
            android:background="@color/greyAlpha"
            android:orientation="horizontal">

            <fonts.DBHelvethaicaX.MedTextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:text="@string/ep_email"
                android:textColor="@color/blue_curious"
                android:textSize="@dimen/font_medium" />

            <fonts.DBHelvethaicaX.MedTextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:singleLine="true"
                android:lines="1"
                android:imeOptions="actionNext"
                android:textColor="@color/white"
                android:textSize="@dimen/font_medium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:layout_below="@id/llEmail"
            android:background="@color/greyAlpha"
            android:orientation="horizontal">

            <fonts.DBHelvethaicaX.MedTextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:text="@string/ep_profile"
                android:textColor="@color/blue_curious"
                android:textSize="@dimen/font_medium" />

            <fonts.DBHelvethaicaX.MedEditText
                android:id="@+id/edtMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:singleLine="true"
                android:lines="1"
                android:imeOptions="actionDone"
                android:textColor="@color/white"
                android:textSize="@dimen/font_medium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:layout_below="@id/llMobile"
            android:background="@color/greyAlpha"
            android:orientation="horizontal">

            <fonts.DBHelvethaicaX.MedTextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:text="@string/ep_password"
                android:textColor="@color/blue_curious"
                android:textSize="@dimen/font_medium" />

            <fonts.DBHelvethaicaX.MedTextView
                android:id="@+id/tvPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:singleLine="true"
                android:lines="1"
                android:imeOptions="actionDone"
                android:textColor="@color/white"
                android:text="12345678"
                android:inputType="textPassword"
                android:textSize="@dimen/font_medium" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>