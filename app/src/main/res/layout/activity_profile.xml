<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/black"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:padding="7dp"
            android:src="@drawable/up" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true">

            <fonts.DBHelvethaicaX.MedCondTextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="U DRINK "
                android:textColor="@color/white"
                android:textSize="@dimen/font_xlarge" />

            <fonts.DBHelvethaicaX.MedCondTextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="I DRIVE"
                android:textColor="@color/blue"
                android:textSize="@dimen/font_xlarge" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivEditAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:padding="7dp"
            android:src="@drawable/edit_profile" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/blueAlpha"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivBorder"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/bronze_frame"
                android:visibility="gone"/>

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/userImage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/usericon"
                app:civ_border_color="#FF000000"
                app:civ_border_width="0.5dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivStar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="3dp"
                android:src="@drawable/star"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/ivStar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_toRightOf="@+id/ivStar1"
                android:src="@drawable/star"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/ivStar3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="3dp"
                android:layout_toLeftOf="@+id/ivStar1"
                android:src="@drawable/star"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/ivStar4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="3dp"
                android:layout_toRightOf="@+id/ivStar2"
                android:src="@drawable/star"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/ivStar5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="3dp"
                android:layout_toLeftOf="@+id/ivStar3"
                android:src="@drawable/star"
                android:visibility="invisible"/>

        </RelativeLayout>

        <fonts.DBHelvethaicaX.MedTextView
            android:id="@+id/userFullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="NAME LAST"
            android:textColor="@color/white"
            android:textSize="@dimen/font_medium" />

        <fonts.DBHelvethaicaX.MedTextView
            android:id="@+id/tvRank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/font_medium"
            android:visibility="gone"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:progress="0"
        android:progressDrawable="@drawable/custom_progressbar1" />

    <LinearLayout
        android:id="@+id/llNextLv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center_horizontal"
        android:visibility="gone">

        <fonts.DBHelvethaicaX.MedCondTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You need "
            android:textColor="@color/white"
            android:textSize="@dimen/font_micro" />

        <fonts.DBHelvethaicaX.MedCondTextView
            android:id="@+id/tvReachPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 km."
            android:textColor="@color/white"
            android:textSize="@dimen/font_micro" />

        <fonts.DBHelvethaicaX.MedCondTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" more to reach next level"
            android:textColor="@color/white"
            android:textSize="@dimen/font_micro" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:orientation="vertical">

            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                facebook:com_facebook_login_text="CONNECT WITH FACEKOOK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/layout_margin_left"
                android:layout_marginRight="@dimen/layout_margin_left"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/llPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin_left"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:layout_weight="0"
                    android:src="@drawable/payment" />

                <fonts.DBHelvethaicaX.MedTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pf_payment"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_medium" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin_left"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:layout_weight="0"
                    android:src="@drawable/history" />

                <fonts.DBHelvethaicaX.MedTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pf_reservhis"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_medium" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlReward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin_left"
                android:layout_marginTop="3dp">

                <ImageView
                    android:id="@+id/ivRewardIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/reward_hbg" />

                <fonts.DBHelvethaicaX.MedTextView
                    android:id="@+id/tvReward"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/pf_reward"
                    android:textColor="@color/white"
                    android:layout_toRightOf="@id/ivRewardIcon"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/font_medium" />

                <RelativeLayout
                    android:id="@+id/rlRewardBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tvReward"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/big_reddot" />

                    <fonts.DBHelvethaicaX.LiTextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingLeft="9dp"
                        android:paddingTop="3dp"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/font_medium"
                        android:textColor="@color/white"
                        android:text="N"/>

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin_left"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:layout_weight="0"
                    android:src="@drawable/aboutus" />

                <fonts.DBHelvethaicaX.MedTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pf_about"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_medium" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin_left"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:layout_weight="0"
                    android:src="@drawable/logout" />

                <fonts.DBHelvethaicaX.MedTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pf_logout"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_medium" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>