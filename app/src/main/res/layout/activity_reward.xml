<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_bg_new"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/black"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/llBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:padding="7dp"
            android:src="@drawable/back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true">

            <fonts.DBHelvethaicaX.MedCondTextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="U DRINK "
                android:textColor="@color/white"
                android:textSize="@dimen/font_xlarge" />

            <fonts.DBHelvethaicaX.MedCondTextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="I DRIVE"
                android:textColor="@color/blue"
                android:textSize="@dimen/font_xlarge" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivRule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:padding="7dp"
            android:src="@drawable/header_rule" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <ImageView
            android:id="@+id/ivBgLevel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/bronze_banner"/>

        <RelativeLayout
            android:id="@+id/rlLevel"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:layout_above="@+id/separator"
            android:visibility="gone">

            <fonts.DBHelvethaicaX.MedCondTextView
                android:id="@+id/tvHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LEVEL :"
                android:textColor="@color/blue_udid"
                android:paddingRight="64dp"
                android:textSize="@dimen/font_large" />

            <fonts.DBHelvethaicaX.MedCondTextView
                android:id="@+id/tvLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvHeader"
                android:text="Standard"
                android:textColor="@color/white"
                android:textSize="@dimen/font_large" />

        </RelativeLayout>

        <View
            android:id="@+id/separator"
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:layout_above="@+id/tvName"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="20dp"
            android:background="@color/white"
            android:visibility="gone"/>

        <fonts.DBHelvethaicaX.MedCondTextView
            android:id="@id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="กิโลเมตรสะสมของคุณ"
            android:textColor="@color/white"
            android:textSize="@dimen/font_medium" />

        <ImageView
            android:id="@+id/ivBorder"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tvName"
            android:src="@drawable/kmmeter" />

        <fonts.DBHelvethaicaX.MedCondTextView
            android:id="@+id/tvKm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@+id/km"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="54sp" />

        <fonts.DBHelvethaicaX.MedCondTextView
            android:id="@id/km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tvName"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp"
            android:text="km."
            android:textColor="@color/white"
            android:textSize="@dimen/font_large" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/blue_udid"
        android:orientation="horizontal">

        <fonts.DBHelvethaicaX.LiTextView
            android:id="@+id/btnTab1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="REWARD LIST"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/blue_udid"
            android:textSize="@dimen/font_medium"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <fonts.DBHelvethaicaX.LiTextView
                android:id="@+id/btnTab2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="REWARD INBOX"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@color/blue_udid_unclick"
                android:textSize="@dimen/font_medium"/>

            <!--<su.levenetc.android.badgeview.BadgeView-->
                <!--android:id="@+id/badgeView"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:visibility="gone"-->
                <!--app:badgePadding="3dp"-->
                <!--app:badgeText="0"-->
                <!--app:badgeTextSize="10sp"/>-->

        </RelativeLayout>

    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:background="#00000000"
        android:cacheColorHint="#00000000"
        android:dividerHeight="6dip"
        android:drawSelectorOnTop="false"
        android:listSelector="@android:color/transparent" />

</LinearLayout>