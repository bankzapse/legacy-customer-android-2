<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_new">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/black"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/llBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:padding="7dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true">

            <fonts.DBHelvethaicaX.MedCondTextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="U DRINK "
                android:textColor="@color/white"
                android:textSize="@dimen/font_xlarge" />

            <fonts.DBHelvethaicaX.MedCondTextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="I DRIVE"
                android:textColor="@color/blue"
                android:textSize="@dimen/font_xlarge" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivRule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:padding="7dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/header_rule" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/ivTop"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_below="@id/header"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/balloon" />

    <fonts.DBHelvethaicaX.MedCondTextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivTop"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="CONGRATULATION"
        android:textColor="@color/blue"
        android:textSize="@dimen/font_large" />

    <LinearLayout
        android:id="@+id/coupon"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_below="@id/tv1"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/bg_color"
        android:orientation="horizontal"
        android:padding="6dp">

        <ImageView
            android:id="@+id/ivReward"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_gravity="center_vertical" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp">

            <fonts.DBHelvethaicaX.MedCondTextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COCKTAIL DRINK"
                android:textColor="@color/blue"
                android:textSize="@dimen/font_large" />

            <fonts.DBHelvethaicaX.CondTextView
                android:id="@+id/tvDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvName"
                android:text="value "
                android:textColor="@color/white"
                android:textSize="@dimen/font_medium" />

            <fonts.DBHelvethaicaX.CondTextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvName"
                android:layout_toRightOf="@id/tvDetail"
                android:text="1,330 bath"
                android:textColor="@color/white"
                android:textSize="@dimen/font_medium" />

            <View
                android:id="@+id/separator"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@id/tvDetail"
                android:layout_marginRight="7dp"
                android:background="@color/white" />

            <fonts.DBHelvethaicaX.CondTextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/separator"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/font_medium"
                android:maxLines = "20"
                android:scrollbars = "vertical"/>

        </RelativeLayout>

    </LinearLayout>

    <fonts.DBHelvethaicaX.CondTextView
        android:id="@+id/tvType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:gravity="center"
        android:text="SCAN QR CODE HERE"
        android:textColor="@color/white"
        android:textSize="@dimen/font_small"
        android:layout_below="@+id/coupon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <ImageView
        android:id="@+id/ivQrcode"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/tvType"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

    <fonts.DBHelvethaicaX.CondTextView
        android:id="@+id/tvPromotion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="70sp"
        android:layout_below="@+id/tvType"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>