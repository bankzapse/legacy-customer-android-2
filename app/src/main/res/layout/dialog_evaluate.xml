<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp">
    <View
        android:layout_width = "match_parent"
        android:layout_height="1dp"
        android:layout_margin="2dp"
        android:background="@color/white" />
    <fonts.rsu.RSUBOLDFont
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/de_title"
        android:textColor="@color/blue_curious"
        android:textSize="25sp"
        android:textStyle="bold" />
    <View
        android:layout_width = "match_parent"
        android:layout_height="1dp"
        android:layout_margin="2dp"
        android:background="@color/white" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/eva_1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:padding="10dp"
            android:src="@drawable/eva_1" />

        <ImageView
            android:id="@+id/eva_2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:padding="10dp"
            android:src="@drawable/eva_2" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/eva_3"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:padding="5dp"
            android:src="@drawable/eva_3" />

        <ImageView
            android:id="@+id/eva_4"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:padding="10dp"
            android:src="@drawable/eva_4" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/eva_5"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:padding="10dp"
            android:src="@drawable/eva_5" />

        <ImageView
            android:id="@+id/eva_6"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:padding="10dp"
            android:src="@drawable/eva_6" />


    </LinearLayout>

    <fonts.rsu.RSUEdit
        android:id="@+id/edt_evaluate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/grey"
        android:hint="@string/de_edt_evaluate"
        android:imeOptions="actionDone"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/blue_curious"
        android:textSize="@dimen/font_medium" />

    <fonts.DBHelvethaicaX.MedCondButton
        android:id="@+id/btn_evaluate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/blue"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/de_btn_evaluate"
        android:textColor="@color/white"
        android:textSize="@dimen/font_large" />


</LinearLayout>