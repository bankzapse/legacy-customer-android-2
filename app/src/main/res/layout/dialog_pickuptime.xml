<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical">

    <fonts.DBHelvethaicaX.MedCondTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:text="@string/h_msg"
        android:textColor="#08b9ff"
        android:textSize="28sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey300" />

    <fonts.DBHelvethaicaX.MedCondButton
        android:id="@+id/btnPickupNow"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#08b9ff"
        android:gravity="center"
        android:textAllCaps="false"
        android:text="@string/h_btnPickupNow"
        android:textColor="@color/white"
        android:textSize="@dimen/font_medium" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey300" />

    <fonts.DBHelvethaicaX.MedCondTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="7dp"
        android:text=""
        android:textColor="#08b9ff"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@color/blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <fonts.DBHelvethaicaX.MedTextView
            android:id="@+id/tvPickupDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <fonts.DBHelvethaicaX.MedTextView
            android:id="@+id/tvPickupTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="28sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/grey400" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/grey400" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <fonts.DBHelvethaicaX.MedCondButton
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="Cancel"
            android:textColor="@color/grey500"
            android:background="#fefefe"
            android:textSize="@dimen/font_medium" />

        <fonts.DBHelvethaicaX.MedCondButton
            android:id="@+id/btnOK"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="OK"
            android:textColor="@color/grey500"
            android:background="#fefefe"
            android:textSize="@dimen/font_medium" />

    </LinearLayout>

</LinearLayout>