<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:padding="20dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edt_input"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="@dimen/font_small"
        android:paddingLeft="8dp"
        android:background="@color/grey_edittext"
        android:textColor="@color/blue_udid"
        android:hint="Note to Driver"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <fonts.DBHelvethaicaX.MedCondButton
            android:id="@+id/dBtnCancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:layout_marginRight="6dp"
            android:text="CANCEL"
            android:textColor="@color/white"
            android:background="@color/grey_button"
            android:textSize="@dimen/font_large" />

        <fonts.DBHelvethaicaX.MedCondButton
            android:id="@+id/dBtnConfirm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:textAllCaps="false"
            android:text="CONFIRM"
            android:textColor="@color/white"
            android:background="@color/grey300"
            android:textSize="@dimen/font_large" />

    </LinearLayout>

</LinearLayout>